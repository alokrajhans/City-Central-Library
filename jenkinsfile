pipeline {
    agent any

    tools {
        nodejs 'NodeJS' // Reference the NodeJS tool installed in Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'git@github.com:alokrajhans/City-Central-Library.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }

        stage('Deploy') {
            steps {
              script {
            // SSH into the server
            sh '''
            ssh -o StrictHostKeyChecking=no user@your-server-ip << 'EOF'
                # Navigate to the project directory
                cd /C:/Users/Hp/Desktop/City Central Library

                # Pull the latest changes from the repository
                git pull https://github.com/alokrajhans/City-Central-Library.git main

                # Install any new dependencies
                npm install

                # Build the project (if necessary)
                npm run build

                # Restart the application using PM2
                pm2 restart city-central-library || pm2 start npm --name "city-central-library" -- start

                # Exit the SSH session
                exit
            EOF
            '''
        }
            }
        }
    }

    post {
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build or deployment failed.'
        }
    }
}
